{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES5"],

    "strict": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "downlevelIteration": true,

    "declaration": true,

    "outDir": "dist",

    "typeRoots": ["node_modules/@types"],

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}
